<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBeige"
    tools:context=".TabooCheck">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:id="@+id/taboo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="병용투여 성분(성분코드) 확인"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:paddingTop="20dp"
        tools:ignore="MissingConstraints" />

    <!-- 스크롤 영역 -->
    <ScrollView
        android:layout_width="320dp"
        android:layout_height="600dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        android:padding="15dp"
        android:id="@+id/scroll_taboo"
        tools:layout_editor_absoluteY="68dp">

        <LinearLayout
            android:id="@+id/container_taboo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@color/baseDarkgray"
            android:dividerPadding="8dp"
            />

    </ScrollView>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>